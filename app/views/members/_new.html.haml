.panel.panel-default
  .panel-body
    %p.lead Add the members of your party here, then indicate their attendance on the next tab
    = form_for [group, member], remote: true, authenticity_token: true, html: { class: "form form-inline", id: "add-member-form" } do |f|
      .form-group
        = f.text_field :first_name, class: "form-control", placeholder: "First Name", required: "required"
        = f.text_field :last_name, class: "form-control", placeholder: "Last Name", required: "required"
        = f.collection_select(:age_group_id, AgeGroup.all, :id, :description, { prompt: "Age Group" }, { id: "age-group-select", class: "form-control", required: "required" })
        %button{ type: "submit", class: "btn btn-default" }
          %span.glyphicon.glyphicon-plus
